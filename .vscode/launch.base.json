{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (local)",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "args": [
        "--debug",
        "--dart-define=FLAVOR=local",
        "--dart-define=GITHUB_TOKEN=your-github-token"
      ]
    },
    {
      "name": "Debug",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "args": ["--debug", "--dart-define=GITHUB_TOKEN=your-github-token"]
    },
    {
      "name": "Release",
      "program": "lib/main.dart",
      "request": "launch",
      "type": "dart",
      "args": ["--release", "--dart-define=GITHUB_TOKEN=your-github-token"]
    },
    {
      "name": "Debug Functions (local)",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229
    }
  ]
}
